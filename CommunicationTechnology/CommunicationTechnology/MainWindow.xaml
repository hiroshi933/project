<Window x:Class="CommunicationTechnology.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunicationTechnology"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="{Binding ElementName=MainFrame,Path=Content.Title}" SizeToContent="WidthAndHeight" 
        MaxWidth="800" MinWidth="400"
        MaxHeight="600" MinHeight="400">
    <Grid Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="C:\Users\студент\Desktop\Views\CommunicationTechnology\CommunicationTechnology\Img\loh1.png" HorizontalAlignment="Left"></Image>
        <Label HorizontalAlignment="Center" 
			   VerticalAlignment="Center"  
			   Style="{StaticResource TitleLabel}"
			   Content="{Binding ElementName=MainFrame, Path=Content.Title}"
			   >
		</Label>
        <Button x:Name="BackButton" HorizontalAlignment="Right" 
				Style="{StaticResource NavigateButton}" 
				Click="BackButton_Click">Назад
		</Button>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
    </Grid>
</Window>
